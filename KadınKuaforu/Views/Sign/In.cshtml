@model SignInModel
@{
    ViewData["Title"] = "In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Giriş yap</h1>
<form method="post" asp-area="" asp-controller="Sign" asp-action="In">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email Adresiniz" />
        <span class="text-warning" asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Şifreniz" />
        <span class="text-warning" asp-validation-for="Password"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Giriş yap</button>
    </div>
</form>
