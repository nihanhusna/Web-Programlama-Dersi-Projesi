@model SignUpModel
@{
    ViewData["Title"] = "Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kayıt ol</h1>
<form method="post" asp-area="" asp-controller="Sign" asp-action="Up">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email Adresiniz" />
        <span class="text-warning" asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Şifreniz" />
        <span class="text-warning" asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" placeholder="Şifreniz tekrar" />
        <span class="text-warning" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div>
        <label asp-for="NameSurname"></label>
        <input asp-for="NameSurname" placeholder="İsim Soyisim" />
        <span class="text-warning" asp-validation-for="NameSurname"></span>
    </div>
    <div>
        <label asp-for="About"></label>
        <textarea asp-for="About" placeholder="Hakkınızda" rows="5"></textarea>
        <span class="text-warning" asp-validation-for="About"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Kayıt ol</button>
    </div>
</form>
